<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <gradient android:angle="270" android:endColor="?attr/btn_select" android:startColor="?attr/btn_select" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

        </shape>

    </item>

    <item>

        <shape>

            <gradient android:angle="270" android:endColor="?attr/btn_normal" android:startColor="?attr/btn_normal" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

        </shape>

    </item>

</selector>
